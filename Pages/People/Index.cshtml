@page 
@model PeopleModel

<h1>People</h1>

<p>@Model.People.Count() people found.</p>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.City.Name</td>
            </tr>
        }
    </tbody>
</table>